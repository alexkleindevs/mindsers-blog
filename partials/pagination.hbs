<nav class='pagination' role='navigation' aria-label='Pagination'>
    <div>
        <a class='pagination-link {{#unless prev}}disabled{{/unless}}' href='{{page_url 1}}'>&laquo; First</a>
        <a class='pagination-link {{#unless prev}}disabled{{/unless}}' href='{{page_url prev}}'>&lsaquo; Prev</a>
    </div>
    <span class='page-number'>{{page}} / {{pages}}</span>
    <div>
        <a class='pagination-link {{#unless next}}disabled{{/unless}}' href='{{page_url next}}'>Next &rsaquo;</a>
        <a class='pagination-link {{#unless next}}disabled{{/unless}}' href='{{page_url pages}}'>Last &raquo;</a>
    </div>
</nav>