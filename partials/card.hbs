{{!
Re-usable card for linking to posts
}}

<article class='mds-card {{post_class}}'>
    <a class='mds-card-link' href='{{url}}'>
        <div class='mds-card-content'>
            {{!-- <span class='mds-card-meta'><time
                    datetime='{{date format='YYYY-MM-DD'}}'
                >{{date format='D MMM YYYY'}}</time>
                <span class='bull'>&bull;</span>
                {{reading_time}}</span> --}}
            <h2 class='mds-card-title'>{{title}}</h2>
            <p>{{excerpt}}</p>
            <strong class='cta'>
                Read more
                <i class='gg-arrow-right'></i>
            </strong>
        </div>
    </a>
</article>