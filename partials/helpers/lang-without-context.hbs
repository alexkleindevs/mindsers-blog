{{~#has tag="#en"~}}
    en
{{~else has tag="#fr"~}}
    fr
{{~else has tag="#de"~}}
    de
{{~else has tag="#es"~}}
    es
{{~else~}}
    {{~#is "fr"~}}
        fr
    {{~else is "en, enbusiness, entech, ennewsletters, encoffeeshops, enlifestyle"~}}
        en
    {{~else is "es, esbusiness, estech, esnewsletters, escoffeeshops, eslifestyle"~}}
        es
    {{~else is "de, debusiness, detech, denewsletters, decoffeeshops, delifestyle"~}}
        de
    {{~else~}}
        {{~@site.lang~}}
    {{~/is~}}
{{~/has~}}