{{!< default}}

<link rel='stylesheet' type='text/css' href='{{asset 'css/login.css'}}' />

<div class='mds-login'>
    <div class='mds-container'>
        <header class='mds-header'>
            <h1 class='mds-title'>Welcome!</h1>
        </header>

        <form data-members-form='signup'>
            <label>
                Name
                <input
                    data-members-name
                    type='text'
                    required='true'
                    placeholder='Jamie Larson'
                />
            </label>
            <label>
                Email
                <input
                    data-members-email
                    type='email'
                    required='true'
                    placeholder='jamie@example.com'
                />
            </label>
            <button class='button primary' type='submit'>Continue</button>
            <p class='switch'>
                Already a member?
                <a href='/login/'>Log in</a>
            </p>
        </form>
    </div>
</div>