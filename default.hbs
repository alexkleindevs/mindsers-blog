                                <li><a
                                        href='https://nathanaelcherrier.dev/fr/contact'
                                    >Me contacter</a></li>
                                <li><a
                                        href='https://feedly.com/i/subscription/feed/{{@site.url}}/fr/rss/'
                                        title='RSS'
                                        target='_blank'
                                        rel='noopener'
                                    >RSS</a></li>
                            </ul>
                            {{navigation type='secondary'}}
                        </div>
                        <div class='menu-list'>
                            <h2>Open Sources</h2>
