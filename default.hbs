<html lang='{{@site.locale}}'>
    <head>
        <meta charset='utf-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='monetization' content='$ilp.uphold.com/Apm7DzrByBYN' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link
            rel='stylesheet'
            type='text/css'
            href='{{asset 'css/main.css'}}'
        />

        <title>{{meta_title}} | {{@site.title}}</title>

        {{ghost_head}}
    </head>

    <body class='{{body_class}}'>
        <div class='mds-viewport'>
            <header id='mds-head' class='mds-head'>
                <nav
                    class='mds-head-inner mds-container'
                    role='navigation'
                    aria-label='Main Navigation'
                >

                    <div class='mds-head-brand'>
                        <a class='mds-head-logo' href='{{@site.url}}'>
                            {{#if @site.logo}}
                                <img
                                    src='{{@site.logo}}'
                                    alt='{{@site.title}} - Back to home page'
                                />
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        </a>
                        <a class='mds-burger' role='button'>
                            <div class='mds-burger-box'>
                                <div class='mds-burger-inner'></div>
                            </div>
                        </a>
                    </div>
                    <div class='mds-head-menu'>
                        {{navigation}}
                    </div>
                    <div class='mds-head-placeholder'></div>
                    <div class='mds-head-actions'>
                        {{#if @member}}
                            <a
                                class='button primary'
                                href='javascript:'
                                data-members-signout
                            >Sign out</a>
                        {{else}}
                            <button class='button primary'>Login</button>
                        {{/if}}
                    </div>
                </nav>
            </header>

            <main class='mds-main'>

                {{{body}}}
                {{! All content gets inserted here, index.hbs, post.hbs, etc }}

            </main>

            <footer class='mds-foot'>
                <div class='mds-container'>
                    <nav
                        class='mds-foot-menu'
                        role='navigation'
                        aria-label='More Links'
                    >
