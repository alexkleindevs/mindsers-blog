{{!< ../default}}

{{#contentFor "lang"}}en{{/contentFor}}

{{> header-en}}

<section class="list-header">
    <div class="list-header-content">
        <h1>Premium Membership</h1>
        <div class="infos">
            <p class="description">{{@site.title}} has a premium membership. Members get access to a private newsletter and new content every week.</p>
        </div>
    </div>
</section>

<main id="site-main" class="site-main outer">
