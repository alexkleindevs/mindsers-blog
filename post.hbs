{{!< default}}

{{#contentFor 'styles'}}
    <link rel='stylesheet' type='text/css' href='{{asset 'css/post.css'}}' />
{{/contentFor}}

{{#post}}

<article class="mds-article {{post_class}}">

    <header class="mds-header mds-canvas">
        <div class="featured">
            {{#if feature_image}}
            <img class="mds-feature-image"
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 1000px, 2000px"
                loading="lazy"
                src="{{img_url feature_image size="xl"}}"
                alt="{{title}}"
            />
            {{/if}}
        </div>
        <div class="summary">
            <h1 class="mds-title">{{title}}</h1>

            {{#if custom_excerpt}}
            <p class="mds-excerpt">{{custom_excerpt}}</p>
            {{/if}}

            <p class="mds-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                <span class="bull">&bull;</span> {{reading_time}}
            </p>
        </div>
    </header>

    <div class="mds-share">
        <a class="button rounded primary" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}">
            {{> "icons/facebook"}}
        </a>
        <a class="button rounded primary" href="https://twitter.com/intent/tweet?url={{url absolute="true"}}&text={{title}}">
            {{> "icons/twitter"}}
        </a>
        <a class="button rounded primary" href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}">
            {{> "icons/linkedin"}}
        </a>
    </div>

    <div class="mds-content mds-canvas">
        {{content}}
    </div>

    <footer class="mds-footer mds-canvas">

        <div class="mds-post-authors">
            Written by {{#foreach authors}}<a href="{{url}}">{{name}}</a>{{/foreach}}
        </div>

        {{!--
        <section class="mds-post-comments">
            If you want to embed comments, this is a good place to do it!
        </section>
        --}}

    </footer>

</article>

<aside class="mds-readmore">
    <div class="mds-readmore-inner mds-container">
        <div class="mds-readmore-next">
            {{#next_post}}<a href="{{url}}">{{> "icons/arrow-left"}} <h4>{{title}}</h4></a>{{/next_post}}
        </div>
        <div class="mds-readmore-prev">
            {{#prev_post}}<a href="{{url}}">
                <h4>{{title}}</h4> {{> "icons/arrow-right"}}
            </a>{{/prev_post}}
        </div>
    </div>
</aside>

{{/post}}

{{#contentFor "scripts"}}
    <script src="https://unpkg.com/shiki" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script type="module" src="{{asset 'js/post.js'}}"></script>
{{/contentFor}}